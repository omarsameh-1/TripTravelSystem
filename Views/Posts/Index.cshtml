        </td>
        <td>
            @Html.DisplayFor(modelItem => item.numberOfDisLikes)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.User.firstName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.postID }) |
            @Html.ActionLink("Details", "Details", new { id=item.postID }) |
