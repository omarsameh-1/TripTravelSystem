@model IEnumerable<TripTravelSystem.Models.Question>

@{
    ViewBag.Title = "ShowAnswer";
    Layout = "~/Views/Shared/_LayoutWall.cshtml";
}
@Scripts.Render("~/bundles/bootstrap")

<h2>ShowAnswer</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.question1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.answer)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.questionDate)
        </th>
        <th>
            who ask the question
        </th>
        <th>
            Answer From,Asked To whom
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.question1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.answer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.questionDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.firstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User1.firstName)
            </td>

        </tr>
    }

</table>
